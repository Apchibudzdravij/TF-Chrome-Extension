body {
  font-family: Arial, sans-serif;
  width: 280px;
  background-color: #e6f7ff;
  padding: 10px;
  overflow: auto;
}


button, select, input {
  margin: 5px 0;
  padding: 5px 10px;
  border: 1px solid #007BFF;
  background-color: #007BFF;
  color: white;
}
.button-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.button-row button {
  width: 48%; /* Adjusted to fit two buttons side by side with a little gap */
}
.third-row button {
  width: 30%; /* Adjusted to fit three buttons side by side */
}


button:hover, select:hover, input:hover {
  background-color: #0056b3;
}


input[type="text"] {
  background-color: white;
  color: black;
  width: 100%;
}


#footerLinks {
  margin-top: 10px;
  font-size: 0.8em;
}


#footerLinks a {
  color: #007BFF;
  text-decoration: none;
}


#footerLinks a:hover {
  text-decoration: underline;
}


#searchProfile {
  margin-top: 10px;
}


#profileList {
  max-height: 150px; /* Adjust as needed */
  overflow-y: scroll;
  border: 1px solid #007BFF;
  margin-top: 5px;
  padding: 5px;
}
.profileItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}
.deleteProfileBtn {
  background-color: red;
  color: white;
  cursor: pointer;
  border: none;
  padding: 2px 5px;
}

#advancedOptionsToggle {
  width: 100%;
  margin-top: 10px;
  background-color: #f0f0f0;
  color: #333;
}
#advancedOptions {
  margin-top: 10px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.profileLinkBtn {
  margin-left: 10px;
  background-color: #007BFF;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
  text-decoration: none;
  cursor: pointer;
}
.profileLinkBtn:hover {
  background-color: #0056b3;
}


.profileItem {
  display: flex;
  justify-content: space-between;
  align-items: center; /* Vertically aligns the items in the center */
  margin-bottom: 5px; /* Add some space between profile items */
}
.profileItem span {
  display: block; /* Make the span a block element */
  margin-bottom: 5px; /* Add some space below the profile name */
}
.profileItem .profileActions {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.profileItem .profileActions button:not(:last-child) {
  margin-right: 5px; /* Add some space between the buttons */
}


.profileNameLink {
  color: inherit;
  text-decoration: none;
  display: inline-block;
  vertical-align: middle;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.profileNameLink:hover {
  text-decoration: underline;
}


.statusBtn {
  margin: 0 5px;
  padding: 5px 10px;
  cursor: pointer;
  background-color: #e0e0e0;
  transition: background-color 0.3s;
  color: #007BFF; /* Blue text for non-active filter buttons */
}
.statusBtn:hover {
  background-color: #c0c0c0;
}
.statusBtn.active {
  background-color: #4CAF50;
  color: white;
}
.statusBtn.reviewLater {
  padding: 5px 5px; /* Minimal padding */
  font-size: 0.9em; /* Slightly smaller font size */
}

.filterDiv {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.filterDiv button {
  background-color: #e0e0e0; /* Light gray for non-active filter buttons */
  color: #007BFF; /* Blue text for non-active filter buttons */
}
.filterDiv button:hover {
  background-color: #c0c0c0; /* Darker gray for hover effect on filter buttons */
}


/* Improve the popup of the donation button */
a[title]:hover:after {
    content: attr(title);
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #333;
    color: #fff;
    padding: 5px 10px;
    border-radius: 5px;
    white-space: nowrap;
    z-index: 1000;
}